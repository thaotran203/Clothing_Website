{% extends 'base.html.twig' %}



{% block body %}
<h1>Your Cart</h1>
 <section id="all-product" class="section-p1">
<form action={{ path('app_review_cart') }} method="get">
                <div class="row row-cols-1 row-cols-md-4 g-4">
                    {% for cart in carts %}
                            <div class="design">
                                <h5 class="card-title">User Email: {{ cart.User.email }}</h5>
                                <h5 class="card-title">Product:{{ cart.Product.Name }}</h5>
                                <h4>Quantity: {{ cart.Quantity }}</h4>
                                 <a href="{{ path('app_cart_edit', {'id': cart.id})}}"class="btn btn-dark">Edit</a>
                           <a href="{{ path('app_cart_delete', {'id': cart.id})}}" class="btn btn-dark">Delete</a>
                            </div>
                            
                        </div>
                       
                    {% endfor %}
                </div>
                </form>
                </section>


{% endblock %}