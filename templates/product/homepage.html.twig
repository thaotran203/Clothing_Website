{% extends 'base.html.twig' %}

{% block title %}Aurora Website{% endblock %}

{% block body %}
    {{ include('header.html.twig') }}

        <div id="slider">
            <figure>
                <img src="{{ asset('images/firstimg.jpg') }}" alt=""/>
                <img src="{{ asset('images/secondimg.jpg') }}" alt=""/>
                <img src="{{ asset('images/thirdimg.jpg') }}" alt=""/>
                <img src="{{ asset('images/fourimg.jpg') }}" alt=""/>
                <img src="{{ asset('images/firstimg.jpg') }}" alt=""/>
            </figure>
        </div>

        <section id="new-arrival" class="section-p1">
            <h2>NEW ARRIVALS</h2>

            <div class="pro-container">
                {% for product in products %}
                        <div class="pro">
                           <a href="{{ path('app_product_show', {'id': product.id}) }}"><img class="card-img-top" src="{{ asset('images/product/' ~ product.getImage()) }}"/></a>
                            <div class="design">
                                <h5 class="card-title">{{ product.Name }}</h5>
                                <h4>$ {{ product.price }}</h4>
                                <a href="{{ path('app_product_show', {'id': product.id}) }}"><img src="{{ asset('images/cart.png') }}" alt=""/></a>
                            </div>
                        </div>
                {% endfor %}
            </div>
        </section>  

        <section id="newsletter" class="section-p1 section-m1">
            <div class="newstext">
                <h4>Sign Up For Newsletters</h4>
                <p>Get E-mail updates about our latest shop and <span>special offers.</span></p>
            </div>
            <div class="form">
                <input type="text" placeholder="Your email address">
                <button class="normal" type="submit">Sign Up</button>
            </div>
        </section>

    {{ include('footer.html.twig') }}
{% endblock %}